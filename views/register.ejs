<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <% include ../partials/head.ejs %>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <!-- navbar -->
    <% include ../partials/nav.ejs %>
    <div class="container col register-form">
      <!-- registration form -->
      <form method="POST" action="/register">
        <div class="login form-group row">
          <label for="name" class="col-sm-2 col-form-label login-text">Name:</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="name" placeholder="First and Last" name="name">
          </div>
        </div>
        <div class="login-top form-group row">
          <label for="email" class="col-sm-2 col-form-label login-text">Email:</label>
          <div class="col-sm-10">
            <input type="email" class="form-control" id="email" placeholder="Email" name="email">
          </div>
        </div>
        <div class="login form-group row">
          <label for="password" class="col-sm-2 col-form-label login-text">Password:</label>
          <div class="col-sm-10">
            <input type="password" class="form-control" id="pwd" name="password">
          </div>
        </div>
        <div class="login form-group row">
          <label for="password2" class="col-sm-2 col-form-label login-text">Confirm Password:</label>
          <div class="col-sm-10">
            <input type="password" class="form-control" id="pwd2" name="confirmPassword">
          </div>
        </div>
        <div class="login form-group row">
          <div class="col-sm-10">
            <button type="submit" class="btn btn-main">REGISTER</button>
          </div>
        </div>
      </form>
    </div>
  </body>
</html>
